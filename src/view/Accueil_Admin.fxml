            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <Button fx:id="user" mnemonicParsing="false" style="-fx-background-color: #00B37D;" stylesheets="@css/style.css" text="Administrateur 1" BorderPane.alignment="CENTER">
