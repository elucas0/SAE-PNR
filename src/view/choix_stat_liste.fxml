<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Choix_Stats_controller">
   <top>
      <BorderPane minHeight="-Infinity" prefHeight="75.0" prefWidth="200.0" stylesheets="@css/style.css" BorderPane.alignment="CENTER">
         <left>
            <ImageView fitHeight="114.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@img/Logo-PNR.png" />
               </image>
               <BorderPane.margin>
                  <Insets left="10.0" top="40.0" />
               </BorderPane.margin>
            </ImageView>
         </left>
         <right>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <Button fx:id="user" mnemonicParsing="false" style="-fx-background-color: #00B37D;" text="Administrateur 1" textFill="WHITE" BorderPane.alignment="CENTER">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="far-user-circle" iconSize="30" />
                     </graphic>
                  </Button>
               </center>
            </BorderPane>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <BorderPane minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #00B37D;" stylesheets="@css/style.css" BorderPane.alignment="CENTER">
         <left>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <left>
                  <Button mnemonicParsing="false" onAction="#toMainPage" style="-fx-background-color: #019367;" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="20.0" />
                     </BorderPane.margin>
                     <graphic>
                        <FontIcon fx:id="retour" iconColor="WHITE" iconLiteral="fas-chevron-left" iconSize="30" styleClass="button" />
                     </graphic>
                  </Button>
               </left>
            </BorderPane>
         </left></BorderPane>
   </bottom>
   <center>
      <BorderPane maxHeight="156.0" minHeight="50.0" minWidth="300.0" prefHeight="78.0" prefWidth="600.0" style="-fx-background-color: #767477;" styleClass="border-pane" stylesheets="@css/style.css" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="110.0" top="90.0" />
         </BorderPane.margin>
         <left>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <left>
                  <Button fx:id="liste" mnemonicParsing="false" onAction="#toObs" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #C0C0C0;" text="Liste des observations" textFill="WHITE" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="20.0" />
                     </BorderPane.margin>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-clipboard-list" iconSize="20" />
                     </graphic>
                  </Button>
               </left>
            </BorderPane>
         </left>
         <right>
            <Button fx:id="stat" mnemonicParsing="false" onAction="#toGraphics" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #C0C0C0;" text="Statistiques" textFill="WHITE" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="20.0" />
               </BorderPane.margin>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="fas-chart-line" iconSize="20" />
               </graphic>
            </Button>
         </right>
         <center>
            <MenuButton alignment="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #C0C0C0;" stylesheets="@css/style.css" text="Exportation" textFill="WHITE" BorderPane.alignment="CENTER">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="fas-pen-fancy" iconSize="20" />
               </graphic>
               <items>
                  <MenuItem fx:id="batracien" mnemonicParsing="false" onAction="#exportation_obs_batracien" text="Batracien ">
                     <graphic>
                        <FontIcon iconLiteral="fas-frog" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="loutre" mnemonicParsing="false" onAction="#exportation_obs_loutre" text="Loutre">
                     <graphic>
                        <FontIcon iconLiteral="fas-otter" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="gci" mnemonicParsing="false" onAction="#exportation_obs_gci" text="GCI">
                     <graphic>
                        <FontIcon iconLiteral="fas-feather-alt" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="Hippocampe" mnemonicParsing="false" onAction="#formulaire_obs_hippocampe" text="Hippocampe ">
                     <graphic>
                        <FontIcon iconLiteral="fas-chess-knight" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="chouette" mnemonicParsing="false" onAction="#exportation_obs_chouette" text="Chouette">
                     <graphic>
                        <FontIcon iconLiteral="fab-earlybirds" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="zonehumide" mnemonicParsing="false" onAction="#exportation_zone_humide" text="Zone Humide">
                     <graphic>
                        <FontIcon iconLiteral="fas-water" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="vegetation" mnemonicParsing="false" onAction="#exportation_vegetation" text="Vegetation">
                     <graphic>
                        <FontIcon iconLiteral="fas-tree" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="lieu" mnemonicParsing="false" onAction="#exportation_lieu" text="Lieu">
                     <graphic>
                        <FontIcon iconLiteral="fas-map-marked-alt" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="observateur" mnemonicParsing="false" onAction="#exportation_a_observe" text="Observateur">
                     <graphic>
                        <FontIcon iconLiteral="fas-search" />
                     </graphic>
                  </MenuItem>
               </items>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </MenuButton>
         </center>
      </BorderPane>
   </center>
</BorderPane>
